<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    app:cardElevation="@dimen/_2sdp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/custom_sub_category_image"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"/>

        <TextView
            android:maxLines="2"
            android:minLines="2"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/custom_sub_category_name"
            android:gravity="center"
            style="@style/text_12"/>

        <LinearLayout
            android:id="@+id/custom_sub_category_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/custom_sub_category_edit"
                style="@style/text_11"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/yellow"
                android:gravity="center"
                android:paddingVertical="@dimen/_3sdp"
                android:text="Edit"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/custom_sub_category_delete"
                style="@style/text_11"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/red"
                android:gravity="center"
                android:paddingVertical="@dimen/_3sdp"
                android:text="Delete"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>