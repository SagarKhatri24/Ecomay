<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/bgStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/profile_name"
            style="@style/edit_14"
            android:layout_marginTop="@dimen/_50sdp"
            android:hint="Name"
            android:inputType="textPersonName" />

        <!-- For Creating EditText Widget For Email Id -->
        <EditText
            android:id="@+id/profile_email"
            style="@style/edit_14"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/profile_contact"
            style="@style/edit_14"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Contact No."
            android:inputType="phone"
            android:maxLength="10" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <EditText
                android:id="@+id/profile_password"
                style="@style/edit_14"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="15" />

            <ImageView
                android:id="@+id/profile_hide"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="@dimen/_40sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/hide"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/profile_show"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="@dimen/_40sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/show" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <EditText
                android:id="@+id/profile_confirmn_password"
                style="@style/edit_14"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:maxLength="15" />

            <ImageView
                android:id="@+id/profile_confirm_hide"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="@dimen/_40sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/hide"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/profile_confirm_show"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginRight="@dimen/_40sdp"
                android:padding="@dimen/_2sdp"
                android:src="@drawable/show" />

        </FrameLayout>

        <RadioGroup
            android:id="@+id/profile_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/profile_male"
                style="@style/radio_14"
                android:text="Male" />

            <RadioButton
                android:id="@+id/profile_female"
                style="@style/radio_14"
                android:text="Female" />

        </RadioGroup>

        <Spinner
            android:id="@+id/profile_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp" />

        <Button
            android:id="@+id/profile_edit"
            style="@style/button_14"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Edit Profile" />

        <Button
            android:visibility="gone"
            android:id="@+id/profile_submit"
            style="@style/button_14"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Submit" />

        <Button
            android:id="@+id/profile_logout"
            style="@style/button_14"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Logout" />

        <Button
            android:id="@+id/profile_delete"
            style="@style/button_14"
            android:layout_marginVertical="@dimen/_30sdp"
            android:text="Delete Account" />

    </LinearLayout>
</ScrollView>