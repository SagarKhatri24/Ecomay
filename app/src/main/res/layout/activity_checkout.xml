<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    style="@style/bgStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/checkout_name"
            style="@style/edit_14"
            android:layout_marginTop="@dimen/_30sdp"
            android:hint="Name"
            android:inputType="textPersonName" />

        <!-- For Creating EditText Widget For Email Id -->
        <EditText
            android:id="@+id/checkout_email"
            style="@style/edit_14"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/checkout_contact"
            style="@style/edit_14"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Contact No."
            android:inputType="phone"
            android:maxLength="10" />

        <EditText
            android:gravity="start"
            android:maxLines="2"
            android:minLines="2"
            android:id="@+id/checkout_address"
            style="@style/edit_14"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Address" />

        <EditText
            android:id="@+id/checkout_pincode"
            style="@style/edit_14"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Pincode"
            android:inputType="number"
            android:maxLength="6" />
        
        <Spinner
            android:id="@+id/checkout_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp" />
        
        <RadioGroup
            android:id="@+id/checkout_payment_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/checkout_cash"
                style="@style/radio_14"
                android:text="Cash" />

            <RadioButton
                android:id="@+id/checkout_online"
                style="@style/radio_14"
                android:text="Online" />

        </RadioGroup>

        <Button
            android:id="@+id/checkout_pay_now"
            style="@style/button_14"
            android:layout_marginTop="@dimen/_30sdp"
            android:text="Pay Now" />
    </LinearLayout>
</ScrollView>