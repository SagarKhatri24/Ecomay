<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderDetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_3sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_detail_no"
                    style="@style/text_13"
                    android:layout_width="match_parent"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/order_detail_name"
                    style="@style/text_14"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/order_detail_email"
                    style="@style/text_13"
                    android:textColor="@color/black_gray" />
                
                <TextView
                    android:id="@+id/order_detail_contact"
                    style="@style/text_13"
                    android:textColor="@color/black_gray" />

                <TextView
                    android:id="@+id/order_detail_address"
                    style="@style/text_12"
                    android:layout_gravity="start"
                    android:textColor="@color/black_gray"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/order_detail_payment"
                    style="@style/text_13"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/order_detail_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>